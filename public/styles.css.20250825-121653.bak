/* === MONO LIGHT THEME (ч/б светлая) — APPEND === */
:root{
  --bg-primary:#F5F7FA;
  --panel:#FFFFFF;
  --panel-2:#FFFFFF;
  --card-bg:#FFFFFF;
  --card-hover:#F3F6FA;
  --line:#E4E7EE;
  --text-primary:#0F1115;
  --text-secondary:#4B5563;
  --accent-primary:#0F1115;
  --accent-weak:#6B7280;
  --chart-bar:#0F1115;
  --shadow:0 12px 40px rgba(15,17,21,.06);
}

/* === ГЛАВНАЯ (моно) === */
body{background:var(--bg-primary);color:var(--text-primary)}
.container{max-width:1200px;margin:0 auto;padding:0 20px}
.site-header{position:sticky;top:0;z-index:20;background:var(--panel);border-bottom:1px solid var(--line)}
.header-content{display:flex;align-items:center;gap:16px;justify-content:space-between;padding:14px 0}
.brand{display:flex;align-items:center;gap:10px;text-decoration:none;color:inherit}
.brand-logo{width:42px;height:42px;object-fit:contain;border-radius:10px;box-shadow:0 0 0 2px rgba(15,17,21,.08)}
.brand-name{font-weight:800;letter-spacing:.2px}
nav ul{display:flex;gap:20px;list-style:none;margin:0;padding:0}
nav a{text-decoration:none;color:var(--text-secondary)}
nav a:hover{color:var(--text-primary)}
.btn{display:inline-block;padding:10px 16px;border-radius:12px;text-decoration:none;font-weight:800}
.btn-primary{background:var(--accent-primary);color:#FFF;border:1px solid var(--accent-primary);box-shadow:var(--shadow)}
.btn-ghost{border:2px solid var(--accent-weak);color:var(--accent-primary);background:transparent}
.hero{padding:80px 0;background:radial-gradient(55% 100% at 50% 0%, rgba(15,17,21,.07), rgba(0,0,0,0) 60%)}
.hero-inner{display:grid;grid-template-columns:1.25fr .75fr;gap:32px;align-items:center}
.hero h1{margin:0 0 10px;font-size:46px;line-height:1.1;background:linear-gradient(90deg,#111,#666);-webkit-background-clip:text;-webkit-text-fill-color:transparent}
.hero p{color:var(--text-secondary);margin:0 0 20px;max-width:620px}
.hero-actions{display:flex;gap:12px;margin:18px 0 10px}
.hero-badges{display:flex;flex-wrap:wrap;gap:10px;color:var(--text-secondary);font-size:14px}
.hero-card{display:flex;align-items:center;justify-content:center;background:var(--panel);border:1px solid var(--line);border-radius:18px;padding:24px;box-shadow:var(--shadow)}
.hero-card img{width:240px;height:240px;object-fit:contain}
.section-title{text-align:center;font-size:28px;margin:0 0 28px}
.cards-grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(270px,1fr));gap:16px}
.card{background:var(--card-bg);border:1px solid var(--line);border-radius:14px;padding:16px;transition:.2s}
.card:hover{transform:translateY(-3px);background:var(--card-hover);box-shadow:var(--shadow)}
.card-ic{font-size:22px;margin-bottom:8px;color:var(--accent-weak)}
.card-title{font-weight:800;margin:4px 0}
.steps{padding:60px 0;background:linear-gradient(180deg,rgba(15,17,21,.03),rgba(15,17,21,0))}
.steps-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(240px,1fr));gap:16px}
.step{background:var(--panel);border:1px solid var(--line);border-radius:14px;padding:18px}
.step-num{width:34px;height:34px;border-radius:10px;background:#111;color:#fff;font-weight:800;display:flex;align-items:center;justify-content:center;margin-bottom:10px}
.testimonials{padding:60px 0}
.reviews{display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:16px}
.review{background:var(--card-bg);border:1px solid var(--line);border-radius:14px;padding:16px}
.review p{margin:0 0 12px;font-style:italic;color:#111}
.review-author{color:var(--accent-weak);font-weight:700}
.partners{padding:56px 0}
.brand-row{display:flex;flex-wrap:wrap;gap:12px;justify-content:center}
.brand-badge{padding:10px 14px;border-radius:12px;border:1px solid var(--line);background:#fff;color:#111;font-weight:800;letter-spacing:.5px;box-shadow:var(--shadow)}
.faq{padding:56px 0}
.faq-list{max-width:900px;margin:0 auto;display:grid;gap:10px}
.faq-item{background:#fff;border:1px solid var(--line);border-radius:12px;padding:8px 14px}
.faq-item>summary{cursor:pointer;list-style:none;font-weight:800}
.faq-item[open]{background:#F8FAFC}
.faq-a{color:var(--text-secondary);margin-top:8px}
.cta-strip{padding:28px 0}
.cta-strip-inner{display:flex;gap:16px;align-items:center;justify-content:space-between;background:#fff;border:1px solid var(--line);border-radius:16px;padding:18px 20px;box-shadow:var(--shadow)}
.site-footer{padding:32px 0;border-top:1px solid var(--line);background:#fff}
.footer-content{display:flex;gap:16px;align-items:center;justify-content:space-between}
.footer-links a{color:var(--text-secondary);text-decoration:none}
.muted{color:var(--text-secondary)}
.nav-toggle{display:none;position:relative;width:40px;height:40px;border:1px solid var(--line);border-radius:10px;background:var(--panel)}
.nav-toggle span{position:absolute;left:9px;right:9px;height:2px;background:#111;border-radius:2px}
.nav-toggle span:nth-child(1){top:12px}.nav-toggle span:nth-child(2){top:19px}.nav-toggle span:nth-child(3){top:26px}
.hide-sm{display:inline-block}
@media (max-width:980px){.hero-inner{grid-template-columns:1fr}.hero-card{order:-1}}
@media (max-width:768px){
  .nav-toggle{display:inline-block}
  nav#mainNav ul{display:none;position:absolute;top:60px;right:16px;background:#fff;border:1px solid var(--line);border-radius:12px;padding:10px 12px;flex-direction:column;gap:8px;min-width:220px;z-index:30}
  .site-header.open nav#mainNav ul{display:flex}
  .hide-sm{display:none}
}

