/* ==== Палитра (под логотип, светло-зелёная) ==== */
:root{
  --bg-primary:#0F1713;        /* темно-зелёный фон */
  --panel:#121C16;
  --panel-2:#16231B;
  --card-bg:#152019;
  --card-hover:#1B2A21;
  --text-primary:#FFFFFF;
  --text-secondary:#C7D2CC;
  --accent-primary:#22E78E;    /* основной зелёный (можешь менять) */
  --accent-soft:#BFF7DE;       /* мягкий зеленый для свечения */
}

/* Базовые */
*{box-sizing:border-box}
html,body{margin:0}
body{font-family:'Inter',system-ui,Segoe UI,Roboto,Arial,sans-serif;background:var(--bg-primary);color:var(--text-primary);line-height:1.6}
.container{max-width:1200px;margin:0 auto;padding:0 20px}

/* Header */
.site-header{position:sticky;top:0;z-index:20;background:linear-gradient(180deg,rgba(34,231,142,.07),rgba(21,32,25,0)) , var(--bg-primary);border-bottom:1px solid rgba(255,255,255,.06);backdrop-filter:saturate(140%) blur(6px)}
.header-content{display:flex;align-items:center;justify-content:space-between;padding:14px 0}
.brand{display:flex;align-items:center;gap:10px;text-decoration:none;color:inherit}
.brand.sm .brand-logo{width:28px;height:28px}
.brand-logo{width:36px;height:36px;border-radius:50%;box-shadow:0 0 0 2px rgba(34,231,142,.12)}
.brand-name{font-weight:700;letter-spacing:.3px}
nav ul{display:flex;gap:20px;list-style:none;margin:0;padding:0}
nav a{text-decoration:none;color:var(--text-secondary)}
nav a:hover{color:#fff}
.btn{display:inline-block;padding:10px 16px;border-radius:12px;text-decoration:none;font-weight:700}
.btn-primary{background:var(--accent-primary);color:#0B0E12;box-shadow:0 6px 30px rgba(34,231,142,.25)}
.btn-ghost{border:2px solid rgba(34,231,142,.35);color:var(--accent-primary);}

/* Hero */
.hero{padding:80px 0;background:radial-gradient(65% 120% at 50% 0%, rgba(34,231,142,.15), rgba(0,0,0,0) 60%)}
.hero-inner{display:grid;grid-template-columns:1.25fr .75fr;gap:32px;align-items:center}
.hero h1{margin:0 0 10px;font-size:46px;line-height:1.1;background:linear-gradient(90deg,#fff,var(--accent-soft));-webkit-background-clip:text;-webkit-text-fill-color:transparent}
.hero p{color:var(--text-secondary);margin:0 0 20px;max-width:620px}
.hero-actions{display:flex;gap:12px;margin:18px 0 10px}
.hero-badges{display:flex;flex-wrap:wrap;gap:10px;color:var(--text-secondary);font-size:14px}
.hero-card{display:flex;align-items:center;justify-content:center;background:var(--panel);border:1px solid rgba(255,255,255,.06);border-radius:18px;padding:24px;box-shadow:0 10px 40px rgba(0,0,0,.35)}
.hero-card img{width:240px;height:240px;object-fit:contain;filter:drop-shadow(0 0 18px rgba(34,231,142,.25))}

/* Sections / Cards */
.section-title{text-align:center;font-size:28px;margin:0 0 28px}
.cards-grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(270px,1fr));gap:16px}
.card{background:var(--card-bg);border:1px solid rgba(255,255,255,.06);border-radius:14px;padding:16px;transition:.2s}
.card:hover{transform:translateY(-3px);background:var(--card-hover);box-shadow:0 16px 40px rgba(34,231,142,.08)}
.card-ic{font-size:22px;margin-bottom:8px;color:var(--accent-primary)}
.card-title{font-weight:700;margin:4px 0}

/* Steps */
.steps{padding:60px 0;background:linear-gradient(180deg,rgba(34,231,142,.04),rgba(34,231,142,0))}
.steps-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(240px,1fr));gap:16px}
.step{background:var(--panel);border:1px solid rgba(255,255,255,.06);border-radius:14px;padding:18px}
.step-num{width:34px;height:34px;border-radius:10px;background:rgba(34,231,142,.2);color:#0B0E12;font-weight:800;display:flex;align-items:center;justify-content:center;margin-bottom:10px}

/* Testimonials */
.testimonials{padding:60px 0}
.reviews{display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:16px}
.review{background:var(--card-bg);border:1px solid rgba(255,255,255,.06);border-radius:14px;padding:16px}
.review p{margin:0 0 12px;font-style:italic}
.review-author{color:var(--accent-soft);font-weight:600}

/* CTA strip */
.cta-strip{padding:28px 0;background:linear-gradient(180deg, rgba(34,231,142,.08), rgba(34,231,142,0))}
.cta-strip-inner{display:flex;gap:16px;align-items:center;justify-content:space-between;background:var(--panel-2);border:1px solid rgba(255,255,255,.06);border-radius:16px;padding:18px 20px}
.cta-text h3{margin:0 0 6px}
.cta-text p{margin:0;color:var(--text-secondary)}
.cta-actions{display:flex;gap:12px}

/* Footer */
.site-footer{padding:32px 0;border-top:1px solid rgba(255,255,255,.06)}
.footer-content{display:flex;gap:16px;align-items:center;justify-content:space-between}
.footer-links{display:flex;gap:14px}
.footer-links a{color:var(--text-secondary);text-decoration:none}
.muted{color:var(--text-secondary)}

/* Кнопки из старой части */
.hero-button{padding:12px 20px;border-radius:10px;text-decoration:none;font-weight:700}
.primary-btn{background:var(--accent-primary);color:#0B0E12}

/* Адаптив */
@media (max-width:980px){ .hero-inner{grid-template-columns:1fr} .hero-card{order:-1} }
@media (max-width:640px){ nav ul{display:none} .cta-strip-inner{flex-direction:column;align-items:flex-start} }

/* === Ниже остаются стили кабинета, если они у тебя уже были в файле === *//* Partners */
.partners{padding:56px 0;background:linear-gradient(180deg,rgba(34,231,142,.04),rgba(34,231,142,0))}
.brand-row{display:flex;flex-wrap:wrap;gap:12px;justify-content:center}
.brand-badge{padding:10px 14px;border-radius:12px;border:1px solid rgba(255,255,255,.08);background:rgba(34,231,142,.06);color:#BFF7DE;font-weight:700;letter-spacing:.5px}

/* FAQ */
.faq{padding:56px 0}
.faq-list{max-width:900px;margin:0 auto;display:grid;gap:10px}
.faq-item{background:rgba(255,255,255,.04);border:1px solid rgba(255,255,255,.06);border-radius:12px;padding:8px 14px}
.faq-item>summary{cursor:pointer;list-style:none;font-weight:700}
.faq-item[open]{background:rgba(34,231,142,.06)}
.faq-a{color:#C7D2CC;margin-top:8px}
.center{text-align:center}.mt-16{margin-top:16px}
