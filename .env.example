# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/karmasystem

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Sentry (optional)
SENTRY_DSN=your_sentry_dsn_here

# App
APP_ENV=development
DEBUG=True

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_SECRET_TOKEN=your_webhook_secret_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/telegram/webhook
TELEGRAM_ADMIN_IDS=12345678,87654321  # Comma-separated list of admin user IDs

# Frontend URL (for CORS and emails)
FRONTEND_URL=http://localhost:3000

# SMTP (for emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@karmasystem.app
